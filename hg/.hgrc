[ui]
username = Nick Loadholtes nick@ironboundsoftware.com
verbose= True
ignore.other = ~/.hgignore
slash = true

[extdiff]
cmd.kdiff3 =

[merge-tools]
kdiff3.args = $base $local $other -o $output

[extensions]
rebase=
hgext.extdiff =
mq =
hgext.purge=
#hggit = 
hgext.bookmarks =
color = 
bookmarks =
hgext.churn =
graphlog =
inotify =
hgext.convert =
pager = 

[bookmarks]
track.current = True

[color]
mode = auto
diff.diffline = bold
diff.extended = cyan bold
diff.file_a = red bold
diff.file_b = green bold
diff.hunk = magenta
diff.deleted = red
diff.inserted = green
diff.changed = white
diff.trailingwhitespace = bold red_background
status.unknown = yellow bold

[pager]
pager = LESS='FSRX' less
