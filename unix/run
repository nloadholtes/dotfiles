#!/bin/zsh

# This is a runner that will notify when the given command is finished. Reports error code
# if there was a problem. This was generated by ChatGPT.

# Check if a command is provided
if [ -z "$1" ]; then
    echo "Usage: $0 <command>"
    exit 1
fi

# Run the provided command
"$@"
exit_status=$?

# Display notification based on the exit status
if [ $exit_status -eq 0 ]; then
    notify-send "Command Successful" "The command '$*' has completed successfully."
else
    notify-send "Command Failed" "The command '$*' has failed with exit status $exit_status."
fi

exit $exit_status

